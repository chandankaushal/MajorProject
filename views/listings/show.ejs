<% layout('/layouts/boilerplate.ejs') -%>
<body>
  <ul>
    <li><%=listing.title%></li>
    <li><%=listing.description%></li>
    <li>&dollar;<%= listing.price.toLocaleString("en-US")%></li>
    <li><%=listing.location%></li>
    <li><%=listing.country%></li>
  </ul>
  <a href="http://localhost:8080/listings/<%=listing._id%>/edit"
    >Edit this Listing</a
  >
  <form
    method="POST"
    action="http://localhost:8080/listings/<%=listing._id%>?_method=DELETE"
  >
    <button>Delete this Listing</button>
  </form>
</body>
